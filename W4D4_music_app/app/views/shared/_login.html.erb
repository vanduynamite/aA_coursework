
<h2><%= new_user ? "Create an Account" : "Log in" %></h2>

<form action="<%= new_user ? new_session_url : new_user_url %>" method="post">
    <input type="hidden" name="_method" value="get">
    <input type="hidden" name="authenticity_token">

    <input type="submit" value="<%= new_user ? "Existing User?" : "New User?" %>">
</form>

<form action="<%= new_user ? users_url : session_url %>" method="post">
  <input type="hidden" name="_method" value="post">
  <input type="hidden" name="authenticity_token">

  <label for="email">Email Address: </label>
  <input id="email" type="text" name="user[email]">

  <label for="password">Password: </label>
  <input id="password" type="password" name="user[password]">

  <input type="submit" value="Log In">
</form>
